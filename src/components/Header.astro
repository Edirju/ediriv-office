---
import Section from "./Section.astro";
import HeaderLink from "./HeaderLink.astro";
import Logo from "../icons/Logo.astro";
import DataIcon from "../icons/Data.astro";
import NewsIcon from "../icons/News.astro";
import UserPinIcon from "../icons/User-pin.astro";
---

<Section>
  <header class="header">
    <!-- Logo & Home -->
    <a href="/" class="logo">
      <Logo />
      <h2>dinson.</h2>
    </a>
    <!-- Navigation -->
    <nav>
      <HeaderLink href="/projects"><DataIcon />Proyectos</HeaderLink>
      <HeaderLink href="/blog"><NewsIcon />BlogPosts</HeaderLink>
    </nav>
    <!-- Resume link -->
    <div class="flex justify-center mx-auto">
      <a
        href="/resume"
        target="_blank"
        class="flex hover:scale-105 group transition"
      >
        <div
          class="flex h-8 w-8 items-center justify-center space-x-2 rounded-md border border-[rgb(var(--dark),.15)] text-[rgb(var(--light),.85)] bg-[rgb(var(--light),.20)] hover:bg-[rgb(var(--primary-50),.85)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-5 h-5"
            ><path
              d="M19 2H5a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2h4l3 3 3-3h4a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm-7 3c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zM7.177 16c.558-1.723 2.496-3 4.823-3s4.266 1.277 4.823 3H7.177z"
            ></path>
          </svg>
        </div>

        <div class="flex items-center">
          <div
            class="w-4 h-4 border-y-8 border-l-0 border-r-8 border-solid border-[rgb(var(--light),.20)] border-y-transparent group-hover:border-x-yellow-400"
          >
          </div>
          <div
            class="overflow-hidden flex flex-col h-8 items-center rounded-md bg-[rgb(var(--light),.20)] px-4 font-light text-xs justify-center group-hover:bg-yellow-400 transition w-36 relative"
          >
            <span
              class="absolute font-light font-mono text-[rgb(var(--light),.65)] group-hover:animate-fade-out-up"
              >Ver mí Resume</span
            >
            <span
              class="absolute font-mono opacity-0 -translate-y-5 text-black group-hover:animate-fade-in-up"
              >¡Dale un vistazo!</span
            >
          </div>
        </div>
      </a>
    </div>
  </header>
</Section>

<style>
  header {
    @apply flex flex-col flex-wrap items-center mx-auto py-5 md:flex-row md:justify-between animate-slide-in-right;
    font-family: var(--font-body);
    color: rgb(var(--primary-50), 0.85);
  }
  .logo {
    @apply flex items-center select-none mb-2 md:mb-0 transition-colors;
    &:hover {
      color: rgb(var(--light), 0.85);
      text-shadow: 0 0 0.5rem rgb(var(--primary-50), 0.15);
    }
    & h2 {
      @apply text-2xl font-extrabold  ml-0.5;
    }
  }
  nav {
    @apply flex flex-wrap items-center justify-center gap-2 text-sm uppercase font-light md:mr-auto md:ml-2 md:py-1 md:pl-4 md:border-l md:border-[rgb(var(--primary-50),0.35)] mb-2 md:mb-0;
  }
</style>
