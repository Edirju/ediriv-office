<style>
  article {
    @apply flex flex-col gap-4 animate-fade-in-up;
    color: rgb(var(--dark), 0.85);
    & header {
      @apply flex flex-col gap-4 [&>p>strong]:text-[rgb(var(--dark),0.85)] [&>p>strong]:font-medium [&>p>strong]:bg-[rgb(var(--primary-50),.8)] [&>p>strong]:font-mono [&>p>strong]:px-1 [&>p>strong]:py-0.5 [&>p>strong]:text-xs;
      & h2 {
        @apply flex items-center gap-2 text-xl font-bold text-pretty tracking-tighter;
      }
      & p {
        @apply text-sm font-light text-pretty leading-5 tracking-tight;
        color: rgb(var(--dark), 0.65);        
      }
    }
  }

  .stock-ticker {
    color: rgb(var(--light), 1);
    font-size: 14px;
    text-transform: uppercase;
    padding-block: 24px 0;
    overflow: hidden;
    user-select: none;

    --gap: 20px;
    display: flex;
    gap: var(--gap);

    mask-image: linear-gradient(
      to right,
      transparent,
      rgb(var(--light)) 10% 90%,
      transparent
    );
  }
  .stock-ticker ul {
    list-style: none;
    flex-shrink: 0;
    min-width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--gap);

    animation: scroll 30s linear infinite;
  }
  .stock-ticker:hover ul {
    animation-play-state: paused;
  }
  @keyframes scroll {
    to {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }
  .stock-ticker ul li {
    @apply flex items-center rounded-lg px-3 py-2 gap-2 justify-center bg-[rgb(var(--accent-50),.08)];
  }
  .stock-ticker ul:first-child {
    /* background-color: yellow; */
  }
  .stock-ticker ul:last-child {
    /* background-color: pink; */
  }
  .stock-ticker .company,
  .stock-ticker .price {
    font-weight: bold;
  }
  .stock-ticker .price {
    margin-inline: 4px;
  }
