---
import Section from "../Section.astro";
import { certificates } from "../../consts/cv.json";
---

<Section title="Certificaciones">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        const startYear = new Date(date).getFullYear();
        return (
          <li>
            <a href={url} target="_blank" rel="noopener noreferrer">
              {name}
            </a>
            <span>•</span>
            <span class="">{issuer}</span>
            <span>•</span>
            <span>{startYear}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 0.5rem;
  }
  li {
    font-size: 10px;
    font-family: var(--font-mono);
    font-weight: 400;
    line-height: 1.1;
    border: 1px solid rgb(var(--dark), 0.08);
    border-radius: 6px;
    padding: 2px 4px;
    color: rgb(var(--dark), 0.65);
  }
  li a {
    margin-right: 4px;
  }
  li a:hover {
    text-decoration: underline;
    /* text-underline-offset: 2px; */
  }
</style>
