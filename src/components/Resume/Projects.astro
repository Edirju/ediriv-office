---
import Section from "../Section.astro";
import { projects } from "../../consts/cv.json";
import { Github } from "simple-icons-astro";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a
                      href={url}
                      title={`Ver el proyecto ${name}`}
                      target="_blank"
                    >
                      {name}
                    </a>
                    {isActive && <span>â€¢</span>}
                    {github && (
                      <a
                        href={github}
                        title={`Visitar el repositorio de ${name} en GitHub`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="github-code-link"
                      >
                        <Github size={16} />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  <ul>
                    {highlights.map((highlight) => {
                      return <span>{highlight}</span>;
                    })}
                  </ul>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -6px;
  }
  ul li article {
    overflow: hidden;
    border: 1px solid rgb(var(--dark), 0.1);
    border-radius: 10px;
    padding: 8px;
  }
  ul li article {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 8px;
    height: 100%;
  }
  ul li article header h3 {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  ul li article header h3 a {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.05rem;
    text-wrap: pretty;
    color: rgb(var(--dark), 0.85);
  }
  ul li article header h3 a:hover {
    text-decoration: underline;
    text-underline-offset: 4px;
  }
  ul li article header h3 span {
    color: rgb(0, 188, 47, 1);
    inset: 0;
  }
  ul li article header p {
    font-size: 12px;
    font-family: var(--font-mono);
    font-weight: 400;
    text-wrap: pretty;
    color: rgb(var(--dark), 0.55);
    line-height: 1.2;
  }
  ul li article footer ul {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }
  ul li article footer ul span {
    font-size: 10px;
    font-family: var(--font-mono);
    font-weight: 400;
    background: rgb(var(--dark), 0.1);
    color: rgb(var(--dark), 0.65);
    padding: 1px 3px;
    border-radius: 4px;
    width: fit-content;
  }
  .github-code-link {
    margin-left: 5px;
  }
  @media (width <= 700px) {
    ul {
      margin-inline: 0;
      box-shadow: 0 1px 1px rgb(242, 242, 242, 0.35);
    }
    ul li article {
      border: none;
      padding: 0 0 16px 0;
    }
  }
</style>
