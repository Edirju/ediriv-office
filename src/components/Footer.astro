---
import Section from "./Section.astro";
import {
  Github,
  X,
  Linkedin,
  Instagram,
  Threads,
  Facebook,
} from "simple-icons-astro";
const today = new Date();
---

<Section>
  <footer>
    <div class="title">
      <img src="/avatar.svg" alt="" />
      <h3>Edinson Rivera • Desarrollo Web • Community Manager</h3>
      <p>
        &copy; {today.getFullYear()} @edirju. All rights reserved.
      </p>
    </div>
    <div class="social-links">
      <a
        href="https://www.linkedin.com/in/edinson-rivera-jurado-65187927/"
        target="_blank"
      >
        <span class="sr-only">Ir a perfil de Linkedin</span>
        <Linkedin />
      </a>
      <a href="https://github.com/Edirju" target="_blank">
        <span class="sr-only">Ir a GitHub Repo</span>
        <Github />
      </a>
      <a href="https://twitter.com/edinson_rivera" target="_blank">
        <span class="sr-only">Sígueme en Twitter</span>
        <X />
      </a>
      <a href="https://www.instagram.com/edirju/" target="_blank">
        <span class="sr-only">Ir a perfil de Instagram</span>
        <Instagram />
      </a>
      <a href="https://www.threads.net/@edirju" target="_blank">
        <span class="sr-only">Ir a perfil de Threads</span>
        <Threads />
      </a>
      <a href="https://www.facebook.com/edirjudev" target="_blank">
        <span class="sr-only">Ir a perfil de Facebook</span>
        <Facebook />
      </a>
    </div>
  </footer>
</Section>

<style>
  footer {
    @apply text-center font-light text-[rgb(var(--dark),0.65)] text-sm;
    & .title {
      @apply flex flex-col items-center gap-2;
      & h3 {
        font-size: clamp(16px, 1.5vw, 18px);
      }
      & p {
        @apply tracking-wide;
        font-size: clamp(12px, 1.5vw, 14px);
        color: rgb(var(--dark), 0.45);
      }
    }
    & .social-links {
      @apply flex justify-center gap-4 mt-4;
      & a {
        text-decoration: none;
        color: rgb(var(--dark), 0.85);
        transition-property: transform, color;
        transition-duration: 0.3s, 0.5s;
        transition-delay: 0s, 0.1s;
        &:hover {
          color: rgb(var(--accent-65), 1);
          transform: scale(1.2) rotate(360deg);
        }
      }
    }
  }
</style>
